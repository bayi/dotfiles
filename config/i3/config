## Scrathpad
bindsym $mod+Shift+minus move scratchpad
bindsym $mod+minus scratchpad show

# switch to workspace
bindsym $mod+1 workspace $workspaceWeb
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5
bindsym $mod+6 workspace $workspaceVNC
bindsym $mod+7 workspace $workspaceFiles
bindsym $mod+8 workspace $workspaceMedia
bindsym $mod+9 workspace $workspaceMusic
bindsym $mod+odiaeresis workspace $workspaceChat
bindsym $mod+u workspace $workspaceMisc
bindsym $mod+t workspace $workspaceTerm
bindsym $mod+z workspace $workspaceWin

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $workspaceWeb
bindsym $mod+Shift+2 move container to workspace 2
bindsym $mod+Shift+3 move container to workspace 3
bindsym $mod+Shift+4 move container to workspace 4
bindsym $mod+Shift+5 move container to workspace 5
bindsym $mod+Shift+6 move container to workspace $workspaceVNC
bindsym $mod+Shift+7 move container to workspace $workspaceFiles
bindsym $mod+Shift+8 move container to workspace $workspaceMedia
bindsym $mod+Shift+9 move container to workspace $workspaceMusic
bindsym $mod+Shift+odiaeresis move container to workspace $workspaceChat
bindsym $mod+Shift+u move container to workspace $workspaceMisc
