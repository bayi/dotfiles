## Windows & Monitors

# Popups are floats
for_window [window_role="pop-up"] floating enabled

# TS
for_window [class="TeamSpeak 3"] move container to workspace $workspaceChat

# Chrome
assign [class="Chromium"] $workspaceWeb

# Kodi
for_window [class="Kodi"] move container to workspace $workspaceMedia
assign [class="Kodi"] $workspaceMedia

# Mail
assign [class="Thunderbird"] $workspaceMail

# Files
assign [class="Nautilus"] $workspaceFiles

# Zene
for_window [title="^cmus"] move container to workspace $workspaceMusic
assign [title="^cmus"] $workspaceMusic

# Slack
for_window [class="Slack"] move container to workspace $workspaceDiscord
assign [class="Slack"] $workspaceDiscord

# Discord
for_window [class="discord"] move container to workspace $workspaceDiscord
assign [class="discord"] $workspaceDiscord

