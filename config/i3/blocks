# Active window
#
[window]
command=xdotool getactivewindow getwindowname 2> /dev/null || echo "None"
interval=1

# CPU Fan
#
[fan]
command=scripts/fanspeed
interval=5

# CPU Usage
#
[cpu_usage]
command=scripts/cpu_usage/cpu_usage
interval=persist

# Hőmérséklet
#
[temperature]
command=scripts/temperature
interval=5

# RAM
#
[memory]
command=scripts/memory
interval=10

# Lemezek
#

[disk]
command=scripts/disk /
